<div>
    <div>
        <h8>{{user.username}} at {{post.date_created}}</h8>
        <br>
        <h2>{{post.title}}</h2>
        <br>
        <p>{{post.post_text}}</p>
    </div>
    <div>
        <h3>Comments</h3>
        <br>
        {{#each comments}}
        <div>
            <h8>{{user.username}} at {{comment.date_created}}</h8>
            <br>
            <p>{{comment.comment_text}}</p>
        </div>  
        {{/else}}
        <p>No comments yet.</p>
        {{/if}}
        {{/each}}
    </div>
      
</div>