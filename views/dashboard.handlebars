{{!< main}}

{{!-- Set the page title --}}
{{#set 'pageTitle'}}Dashboard{{/set}}

{{!-- Include dashboard-specific styles (if needed) --}}
{{#set 'styles'}}
  <link rel="stylesheet" href="/styles/dashboard.css">
{{/set}}

{{!-- Include dashboard-specific content --}}
{{#content 'content'}}
  <h1>Welcome to Your Dashboard</h1>

  <a href="/post/new" class="btn btn-primary">Create New Post</a>

  {{!-- List the user's existing blog posts --}}
  {{#if posts}}
    <h2>Your Blog Posts</h2>
    <ul>
      {{#each posts}}
        <li>
          <a href="/post/{{ id }}">{{ title }}</a>
          <span>{{ createdAt }}</span>
          <a href="/post/edit/{{ id }}" class="btn btn-secondary">Edit</a>
          <a href="/post/delete/{{ id }}" class="btn btn-danger">Delete</a>
        </li>
      {{/each}}
    </ul>
  {{else}}
    <p>You haven't created any posts yet.</p>
  {{/if}}
{{/content}}